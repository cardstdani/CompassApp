<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorD"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/compassDegrees"
        android:layout_width="372dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:rotation="0"
        android:src="@drawable/modern_compass" />

    <ImageView
        android:id="@+id/compassIndicator"
        android:layout_width="367dp"
        android:layout_height="356dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:rotation="0"
        android:src="@drawable/compass_indicator" />

    <!---<ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_round"/> -->

    <ProgressBar
        android:id="@+id/progressDegrees"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="10"
        android:rotation="90"
        android:scaleX="-1"
        android:progressDrawable="@drawable/circle"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="120"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/latitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="sans-serif-medium"
        android:text="Latitude \n ..."
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/longitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="sans-serif-medium"
        android:text="Longitude \n ..."
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/locationButon"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:alpha="0"
        android:visibility="invisible"
        android:textSize="20dp" />
</RelativeLayout>